<%= form_for book do |f| %>
<%= f.text_field :title, value: display_book.title, readonly: true %><br>
<%= f.text_field :author, value: display_book.authors, readonly: true %><br>
<%= f.text_area :description, value: display_book.description, readonly: true, size: 1500 %><br>
<%= f.number_field :average_rating, value: display_book.average_rating, readonly: true %><br>

<%= f.submit %>
<%end%>