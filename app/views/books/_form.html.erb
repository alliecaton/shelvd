<%= form_for book do |f| %>
<%= f.hidden_field :title, value: display_book.title %>
<%= f.hidden_field :author, value: display_book.authors_array%>
<%= f.hidden_field :description, value: display_book.description %>
<%= f.hidden_field :average_rating, value: display_book.average_rating %>
<%= f.hidden_field :image_link, value: display_book.image_link %>
<%= f.hidden_field :isbn, value: display_book.isbn %>

<%= f.collection_select 'shelf_ids', @shelves, :id, :name %>

<%= f.submit "Add Book" %> 
<%end%>
<%= flash[:notice] %>